# GUM Backend Security Configuration
# Copy this file to .env and update with your production values

# CORS Configuration
ALLOWED_ORIGINS=https://zavion.app,https://www.zavion.app,https://app.zavion.app
ALLOWED_HOSTS=zavion.app,*.zavion.app,www.zavion.app,app.zavion.app

# CORS Settings
CORS_MAX_AGE=86400
STRICT_CORS=true

# Compression
ENABLE_COMPRESSION=true

# AI Provider Configuration
TEXT_PROVIDER=azure  # or openai
VISION_PROVIDER=openrouter  # or azure

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# OpenAI Configuration (if using OpenAI instead of Azure)
OPENAI_API_KEY=your_openai_api_key

# OpenRouter Configuration (for vision)
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Database Configuration
DATABASE_URL=sqlite:///gum.db

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_REQUESTS=100
RATE_LIMIT_DEFAULT_WINDOW=3600

# Logging
LOG_LEVEL=INFO

