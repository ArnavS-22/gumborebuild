# GUM Environment Configuration
# ===========================

# Text Provider Configuration
TEXT_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Vision Provider Configuration
VISION_PROVIDER=openrouter

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
OPENROUTER_MODEL=qwen/qwen-2.5-vl-72b-instruct:free

# Backend Configuration
BACKEND_ADDRESS=http://localhost:8002

# User Configuration
USER_NAME="Your Name Here"
DEFAULT_USER_NAME=GUM_User

# Batching Configuration (for reduced API calls)
# Set to false to disable batching and use immediate API calls
USE_BATCHED_CLIENT=true

# How often to process batches (in hours)
# Recommended range: 0.5 to 4.0 hours
BATCH_INTERVAL_HOURS=1

# Maximum requests per batch
# Recommended range: 20 to 100
MAX_BATCH_SIZE=50